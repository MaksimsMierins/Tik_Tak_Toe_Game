<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AchievementsActivity">

    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <androidx.cardview.widget.CardView
                android:id="@+id/achievementCard1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:cardElevation="4dp"
                app:cardCornerRadius="8dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView
                        android:id="@+id/achievementTitle1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/Achievement1"
                        android:textSize="18sp"
                        android:textColor="@android:color/black"
                        android:fontFamily="sans-serif-medium" />

                    <TextView
                        android:id="@+id/achievementDesc1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/Achievement1Description"
                        android:textSize="14sp"
                        android:textColor="@android:color/darker_gray" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:id="@+id/achievementCard2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:cardElevation="4dp"
                app:cardCornerRadius="8dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView
                        android:id="@+id/achievementTitle2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/Achievement2"
                        android:textSize="18sp"
                        android:textColor="@android:color/black"
                        android:fontFamily="sans-serif-medium" />

                    <TextView
                        android:id="@+id/achievementDesc2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/Achievement2Description"
                        android:textSize="14sp"
                        android:textColor="@android:color/darker_gray" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:id="@+id/achievementCard3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:cardElevation="4dp"
                app:cardCornerRadius="8dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView
                        android:id="@+id/achievementTitle3"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/Achievement3"
                        android:textSize="18sp"
                        android:textColor="@android:color/black"
                        android:fontFamily="sans-serif-medium" />

                    <TextView
                        android:id="@+id/achievementDesc3"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/Achievement3Description"
                        android:textSize="14sp"
                        android:textColor="@android:color/darker_gray" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:id="@+id/achievementCard4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:cardElevation="4dp"
                app:cardCornerRadius="8dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView
                        android:id="@+id/achievementTitle4"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/Achievement4"
                        android:textSize="18sp"
                        android:textColor="@android:color/black"
                        android:fontFamily="sans-serif-medium" />

                    <TextView
                        android:id="@+id/achievementDesc4"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/Achievement4Description"
                        android:textSize="14sp"
                        android:textColor="@android:color/darker_gray" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:id="@+id/achievementCard5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:cardElevation="4dp"
                app:cardCornerRadius="8dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView
                        android:id="@+id/achievementTitle5"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/Achievement5"
                        android:textSize="18sp"
                        android:textColor="@android:color/black"
                        android:fontFamily="sans-serif-medium" />

                    <TextView
                        android:id="@+id/achievementDesc5"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/Achievement5Description"
                        android:textSize="14sp"
                        android:textColor="@android:color/darker_gray" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:id="@+id/achievementCard6"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:cardElevation="4dp"
                app:cardCornerRadius="8dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView
                        android:id="@+id/achievementTitle6"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/Achievement6"
                        android:textSize="18sp"
                        android:textColor="@android:color/black"
                        android:fontFamily="sans-serif-medium" />

                    <TextView
                        android:id="@+id/achievementDesc6"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/Achievement6Description"
                        android:textSize="14sp"
                        android:textColor="@android:color/darker_gray" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>
            <Button
                android:id="@+id/button5"
                android:layout_width="125dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="32dp"
                android:background="@drawable/red_button"
                android:text="@string/HomeButton"
                app:layout_constraintTop_toBottomOf="@id/achievementCard6"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_gravity="center_horizontal" />
            <Button
                android:id="@+id/button8"
                android:layout_width="125dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="32dp"
                android:background="@drawable/blue_button"
                android:text="@string/ResetButton"
                app:layout_constraintTop_toBottomOf="@id/achievementCard6"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_gravity="center_horizontal" />
        </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>
